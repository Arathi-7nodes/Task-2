<b><i><u><center><font size="500"><font color="green">Goal </font></font></center></u></i></b>
<i><b>create goal</b></i>
  <% session[:current_user] %>
<p align="right"><%= link_to "logout", logout_path, method: :post %></p>


<%= form_for(@goal) do |f| %>

  <table>
  <div class="field">
   <tr><td> <%= f.label :title  %> </td>

   <td>  <%= f.text_field :title, placeholder:"Enter your Goal" %></td></tr>
   </div>

  <div class="field">
    <tr><td> <%= f.label :start_date%></td>

     <td><%= f.text_field :start_date, placeholder:"Enter your Start_date" %></td></tr>
  </div>
  <div class="field">
     <tr><td><%= f.label :completion_date%></td>

     <td><%= f.text_field :completion_date, placeholder:"Enter your expected completion_date" %></td></tr>
  </div>
<div class="actions">

  <tr><td></td><td><%= f.submit "OK" %></td></tr>
  </div>
  </table>
  <% end %>
